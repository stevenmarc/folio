<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% user.pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><img src="<%= picture.url %>" width="100" /></td>
        <td><%= picture.user_id %></td>
        <td><%= link_to 'Show', picture %></td>
        <% if current_user == @user %>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>