<div class="container">
  <ul class="row list-unstyled">
    <% user.pictures.each do |picture| %>
    <li class="col-xs-4">
    <div class="thumbnail imageHolder">
      
      <img src="<%= picture.url %>" alt="<%= picture.title %>">
      <div class="caption">
        <h3><%= picture.title %></h3>
        <div><%= picture.description %></div>
      </div>
      <div class="user-caption transition">
          <%= link_to 'Show', picture %><br>
          <% if current_user == @user %>
            <%= link_to 'Edit', edit_picture_path(picture) %><br>
            <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
          <% end %>
    </div>
    </li>
    <% end %>
  </ul>
</div>