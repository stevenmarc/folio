<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Attachment title</th>
      <th>Attachment link</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% user.posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.attachment_title %></td>
        <td><img src="<%= post.attachment_url %>" width="100" /></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user == @user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>