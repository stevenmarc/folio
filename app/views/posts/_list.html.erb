<div class="transbox">
<table>
  <tbody>
    <% user.posts.each do |post| %>
      <tr>
        <td colspan="2"><h4><%= post.title %></h4></td>
                  </tr>
          <tr>
        
        <td><%= post.body %></td>
         </tr>
         <tr>
        <td style "font-weight: normal;"><strong><%= post.attachment_title %></strong>&nbsp<%= post.attachment_url %></td></tr>
         <tr>
        <td align="right"><%= link_to 'Show', post %>
        <% if current_user == @user %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
         </tr>
      
    <% end %>
  </tbody>
</table>
</div>