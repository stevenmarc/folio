  </div>
  
 <br>
    <div class="form-group"> 
    <%= f.label :background_picture_id %><br>
    <%= f.select :background_picture_id, current_user.pictures.all.map{|picture| [picture.title, picture.id]} %>
  </div>
  
  <br> 
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
<% end %>


 
